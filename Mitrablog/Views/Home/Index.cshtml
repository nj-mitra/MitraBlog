@model List<PostListVm>
@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "صفحه اصلی";
}
<section class="jumbotron text-center">
    <div class="container">
        <h1 id="top">درباره ما</h1><p>
            گالری نجفی سال 95 فعالیت خودش رو به عنوان تولید کننده انواع طلا لیزری و دست ساز،با مدیریت علیرضا نجفی شروع کرد.<br />..و حالا با افتخار زمینه ای را برای  اریه محصولات شما عزیزان فراهم کرده است<br />لطفا قبل از ثبت پست جدید و یا خرید از فروشندگان <a href="@Url.Action("Ruls","Home")">قوانین</a> را مطالعه بفرمایید
        </p>

    </div>
</section>
<div class="album py-3 bg-light">
    <div class="container">
        @if (Model != null && Model.Count > 0)
        {
            <div class="row">

                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm text-right">
                            @*<svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>*@
                            <img src="data:image/jpeg;base64, @item.Image" alt="@item.Title" class="img-fluid" style="height:225px" />
                            <div class="card-body">
                                <p class="card-text">@item.Title</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a asp-controller="Post" asp-action="Detail" asp-route-Id="@item.Id" class="btn btn-sm btn-outline-secondary">بیشتر</a>
                                        @*<button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>*@
                                    </div>
                                    <div class="input-group-text">
                                        <img src="~/img/like.png" alt="Like" width="30" height="30" class="mx-2" />
                                        <span class="text-muted">@item.Like</span>
                                        <img src="~/img/Dislike.png" alt="DisLike" width="30" height="30" class="mx-2" />
                                        <span class="text-muted">@item.DisLike</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>
