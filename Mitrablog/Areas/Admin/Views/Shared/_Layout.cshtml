<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>پنل ادمین- @ViewData["Title"]</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-rtl/css/bootstrap-rtl.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/css/simple-sidebar.css" rel="stylesheet" />
</head>
<body>
    <div>
        <div class="d-flex" id="wrapper">

            <!-- Sidebar -->
            <div class="bg-light border-right" id="sidebar-wrapper">
                <div class="sidebar-heading">پنل مدیریت</div>
                <div class="list-group list-group-flush">
                    <a asp-controller="CategoryManagment" asp-action="List" class="list-group-item list-group-item-action bg-light">دسته بندی پست</a>
                    <a asp-controller="PostManagment" asp-action="List" class="list-group-item list-group-item-action bg-light">پست ها</a>
                    <a asp-controller="CommentManagment" asp-action="List" class="list-group-item list-group-item-action bg-light">نظرات</a>

                </div>
            </div>
            <!-- /#sidebar-wrapper -->
            <!-- Page Content -->
            <div id="page-content-wrapper">

                <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">

                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                            <li class="nav-item active">
                            </li>

                        </ul>
                        <div class="nav-item">
                            <a class="nav-link  btn-outline-dark" asp-controller="Home" asp-action="Index">خانه <span class="sr-only">(current)</span></a>
                        </div>
                    </div>
                </nav>

                @RenderBody()

            </div>
            <!-- /#page-content-wrapper -->

        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
