@model List<CommentListManagerVm>
@{
    ViewData["Title"] = "مدیریت نظرات";
}

<h1 class="text-right">  مدیریت نظرات </h1>

<div class="row">
    <table class="table table-striped">
        <thead>
            <tr>
                <td>شناسه</td>
                <td>نام</td>
                <td>ایمیل</td>
                <td>نظر</td>
               <td></td>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>@item.Text</td>
                        <td>
                            <a class="btn btn-success" asp-controller="CommentManagment" asp-action="Accept" asp-route-Id=@item.Id>تایید</a> |
                            <a class="btn btn-danger" asp-controller="CommentManagment" asp-action="Reject" asp-route-Id=@item.Id>رد</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
